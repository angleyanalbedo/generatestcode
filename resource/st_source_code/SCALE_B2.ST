	IN1_MAX :	REAL;
	IN2_MIN :	REAL;
	IN2_MAX :	REAL;
	CEIL5_OUT : REAL;
  END_VAR

  CEIL5_OUT := SCALE_B2(IN1, IN2, K, O, IN1_MIN, IN1_MAX, IN2_MIN, IN2_MAX);
  
	
